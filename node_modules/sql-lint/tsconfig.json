{
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": true,
        "lib": [
            "es7",
            "es2017"
        ],
        "module": "commonjs",
        "outDir": "dist",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        },
        "sourceMap": true,
        "strictNullChecks": true,
        "target": "es2017",
        "resolveJsonModule": true
    },
    "exclude": [
        "dist/**/*"
    ],
    "include": [
        "src/**/*"
    ]
}
